{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "ES2020",
        // "typeRoots" : ["./typings", "./node_modules/@types"],
        "target": "ES2020",
        // "types" : [ "plotly.js" ],
        "noImplicitAny": false,
        "strictNullChecks": false,
        "allowJs": true,
        "noEmit": false,
        "alwaysStrict": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "allowUmdGlobalAccess": true,
        //"outDir": ".",
        "moduleResolution": "Classic",
        "declaration": true,
        "lib": [
            "es6",
            "DOM",
            "DOM.Iterable",
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    
    "include": [                                                                                                                                                                                       
        "*.ts"                                                                                                                                                                                          
      ]    ,
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}